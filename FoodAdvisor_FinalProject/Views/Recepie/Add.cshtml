@using FoodAdvisor.ViewModels.RecepiesViewModels;
@model AddRecepieViewModel

@{
	ViewBag.Title = "Add Recepie";
}
<form asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="@Model.Name" class="form-label-add-edit">Recepie Name</label>
		<input asp-for="@Model.Name" class="form-control" aria-required="true" />
		<span asp-validation-for="@Model.Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.ImageURL" class="form-label-add-edit">ImageURL</label>
		<input asp-for="@Model.ImageURL" class="form-control" aria-required="false" placeholder="Enter image URL of the Restaurant (optional)" />
		<span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.CookingTime" class="form-label-add-edit">Cooking Time</label>
		<input asp-for="@Model.CookingTime" class="form-control" aria-required="true" />
		<span asp-validation-for="@Model.CookingTime" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
		<select asp-for="@Model.CategoryId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
			<option value="">Select Category...</option>
		</select>
		<span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Products" class="form-label-add-edit">Description</label>
		<textarea asp-for="@Model.Products" class="form-control" aria-required="true" rows="5" placeholder="Write a list of the products"></textarea>
		<span asp-validation-for="@Model.Products" class="text-danger"></span>
	</div>
	<div class="mb-3">
	<div class="form-group">
		<label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
		<textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5" placeholder="Write a description for the recepie (20-300 characters)"></textarea>
		<span asp-validation-for="@Model.Description" class="text-danger"></span>
	</div>
	
		<input class="btn btn btn-success  mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Save" />
	</div>
</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

