@using FoodAdvisor.ViewModels.FavouritesViewModel;
@model IEnumerable<FavouritesIndexViewModel>


@{
    ViewData["Title"] = "Favourites";
}

<h2>Your Favourites</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>
                    <img src="@restaurant.ImageUrl" alt="@restaurant.Name" width="100" />
                </td>
                <td>@restaurant.Name</td>
                <td>@restaurant.Category</td>
                <td>@restaurant.Description</td>
                <td>
                    <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-primary">View Details</a>

                    <form asp-controller="Favourites" asp-action="RemoveFromFavourites" asp-route-id="@restaurant.Id" method="post" class="d-inline">
                       <input type="hidden" name="restaurantId" value="@restaurant.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
            </td>
            </tr>
        }
    </tbody>
</table>
